{
  "version": 2,
  "builds": [
    { "src": "bin/www", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(.*)", "methods": ["GET","POST","PUT","DELETE","OPTIONS"], "dest": "bin/www" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://crge-frontend.vercel.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,PUT,DELETE,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" }
      ]
    }
  ]
}